---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import { YouTube } from 'astro-embed';
import DownloadButton from '../components/DownloadButton.astro';
---

<Layout title="Welcome to AltoClef.">
	<main>
		<h1 class="text-black/80 dark:text-white">Welcome to <span class="text-gradient">AltoClef</span></h1>
		<p class="desc">
			Plays block game.<br/>
			<br/>
			Powered by Baritone.<br/>
			<br/>
			A client side bot that allows you to do some actions automatically, a few exemples are beating the game, getting materials, and killing people automatically...<br/>
		</p>
		<p>Video introduction</p>
		<YouTube id="q5OmcinQ2ck" class:list={"rounded-2xl my-8 max-w-none"} />
		<DownloadButton />
		<ul role="list" class="link-card-grid">
			<Card
				href="/AltoClef-site/FAQ"
				title="FAQ"
				body="Frequently Asked Questions."
			/>
			<Card
				href="/AltoClef-site/docs"
				title="Documentation"
				body="Explenation on how AltoClef does it's magic."
			/>
			<Card
				href="/AltoClef-site/usage/"
				title="Usage Guide"
				body="User's guide to embracing and weilding the magic that is AltoClef."
			/>
			<Card
				href="/AltoClef-site/develop"
				title="Development Guide"
				body="Developer's guide to expending AltoClef's magical capabilities."
			/>
			<Card
				href="/AltoClef-site/integrations/"
				title="Integrations"
				body="Supercharge your project with AltoClef."
				disabled={true}
			/>
			<Card
				href="https://discord.gg/JdFP4Kqdqc"
				title="Community"
				body="Come say hi at our Discord community."
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		font-size: 20px;
		line-height: 1.6;
	}
	.astro-a {
		position: absolute;
		top: -32px;
		left: 50%;
		transform: translatex(-50%);
		width: 220px;
		height: auto;
		z-index: -1;
	}
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.desc {
		position: relative;
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		/* background-color: oklch(25.3267% 0.015896 252.417568); */
			background: linear-gradient(145deg, rgba(var(--accent-dark), 53%), rgba(var(--accent-dark), 33%), rgba(var(--accent-dark), 53%));
		padding: 1.5rem;
		border-radius: 8px;
		/* color: oklch(74.6477% 0.0216 264.435964); */
		isolation: isolate;
	}
	@media (prefers-color-scheme: dark) {
		.desc {
			background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		}
	}
	/* .desc::after {
		content: "";
		position: absolute;
		inset: 100%;
		background: linear-gradient(rgba(var(--accent-light), 66%), rgba(var(--accent-light), 33%));
		width: 100%;
		height: 100%;
		translate: -100% -100%;
		z-index: -1;
	} */
	.desc code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}
	.desc strong {
		color: rgb(var(--accent-light));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
